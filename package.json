{
  "name": "ai-native-staff-lab",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,mdx,css,yaml,yml}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,mdx,css,yaml,yml}\"",
    "lint": "yarn workspaces foreach -A --parallel run lint",
    "lint:fix": "yarn workspaces foreach -A --parallel run lint:fix",
    "prepare": "husky",
    "test": "yarn workspaces foreach -A --parallel run test",
    "test:coverage": "yarn workspaces foreach -A --parallel run test:coverage",
    "test:watch": "yarn workspaces foreach -A --parallel run test:watch",
    "typecheck": "yarn workspaces foreach -A --parallel run typecheck",
    "web:build": "yarn workspace @staff-lab/web build",
    "web:dev": "yarn workspace @staff-lab/web dev"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.1",
    "@vercel/style-guide": "^6.0.0",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.11",
    "next": "16.0.3",
    "prettier": "3.6.2",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "typescript": "^5.9.3"
  },
  "packageManager": "yarn@4.5.2"
}
